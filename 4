#include <stdio.h>

int main(void)
{
    int x;
    x = 5;
    printf("%d", x);
    printf("변수 x의 메모리 크기는 %d 입니다", sizeof(x));
    return 0;
]
   int, float 형의 메모리 크기는 무조건 4 바이트
-----------------------------------------------------------------

# include <stdio.h>

int main(void)
{
    int x = 50;
    float y = 123456789.3213;
    double z = 123456789.3213;
    printf("x = %d\n", x);
    printf("y = %.2f\n", y);
    printf("z = %.2f\n", z);
    return 0;
}
-----------------------------------------------------------------
# include <stdio.h>
# include <limits.h>

int main(void)
{
    int x = INT_MAX;
    printf("int 형의 최대값 x는 %d 입니다.\n", x);
    printf("x + 1 은 %d입니다.\n", x + 1);
    return 0;
}
-----------------------------------------------------------------

# include <stdio.h>

int main(void)
{
    int x = 10;
    int y = 20;
    printf("x = %d 입니다.\n", x);
    printf("y = %d 입니다.\n", y);
    printf("x + y = %d 입니다.\n", x + y);
    return 0;
}
-----------------------------------------------------------------

# include <stdio.h>
# define MONTHS 12 
int main(void)
{
    double monthSalary = 1000.5;
    printf("$ %.2f", monthSalary * MONTHS);
    return 0;
}
-----------------------------------------------------------------

# include <stdio.h>

int main(void)
{
    int x = '65';
    printf("%c\n", x);
    char y = 65;
    printf("%c\n", y);
    char z = 'b';
    printf("%d\n", z);
    return 0;
}
-----------------------------------------------------------------

# include <stdio.h>

int main(void)
{
    int x = 100;
    printf("10 진수로 출력 : %d\n", x);
    printf("8 진수로 출력 : %o\n", x);
    printf("16 진수로 출력 : %x\n", x);
    return 0;  
}





















